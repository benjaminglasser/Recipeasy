<%- include('../partials/header') %>

<h1>Enter a new recipe</h1>
<form id="new-recipe" action="/recipes" method="POST" autocomplete="off">
    <label>Title:</label>
    <input type="text" name="title">
    <label>Difficulty:</label>
    <input type="number" min="1" max="10" name="difficulty">
    <label>Cook Time (in minutes):</label>
    <input type="number" name="cookTime" min="1">
    <label>Description:</label>
    <textarea rows="10" cols="25" name="description"></textarea>
    
    <label>Ingredients:</label>
    <div>
        <input class="new-input" type="text" name="ingredients">
        <div id="first-ing"></div>
        <button type="button" id="new-ingredient">new ingredient</button>
    </div>





    <label>Instructions:</label>
    <div>
        <input class="new-input" type="text" name="instructions">
        <div id="first-instruction"></div>
        <button type="button" id="new-instruction">new instruction</button>
    </div>
    <input id="submit" type="submit" value="Add Recipe">
</form>
