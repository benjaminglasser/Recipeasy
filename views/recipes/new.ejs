<%- include('../partials/header') %>

<h1>Enter a new recipe</h1>
<form id="new-recipe" action="/recipes" method="POST">
    <label>Title:</label>
    <input type="text" name="title">
    <label>Difficulty:</label>
    <input type="number" min="1" max="10" name="difficulty">
    <label>Cook Time (in minutes):</label>
    <input type="number" name="cookTime" min="1">
    <label>Description:</label>
    <textarea rows="10" cols="25" name="description"></textarea>
    <label>Instructions:</label>
    <textarea rows="20" cols="25" name="instructions"></textarea>
    <input id="submit" type="submit" value="Add Recipe">
</form>