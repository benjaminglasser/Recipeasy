<%- include('../partials/header') %>
<body id="new-page">

    <form class="form" action="/recipes/<%= user._id%>" method="POST" autocomplete="off">
        <p>Enter a new recipe</p>
    <label>Title:</label>
    <input type="text" name="title" STYLE="background-color: rgb(223, 223, 223); border: none;box-shadow: inset 0 0 5px #00000048;">
    <label>Difficulty:</label>
    <div class="input-field col s12">
    <select STYLE="background-color: rgb(223, 223, 223); border: none;box-shadow: inset 0 0 5px #00000048;" class="browser-default" name="difficulty">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>
    </div>
    <label>Cook Time (in minutes):</label>
    <input type="number" name="cookTime" min="1" STYLE="background-color: rgb(223, 223, 223); border: none;box-shadow: inset 0 0 5px #00000048;">
    <label>Description:</label>
    <textarea rows="20" name="description"></textarea>

    <label>Ingredients:</label>

    <div>
        <input class="new-input" type="text" name="ingredients" STYLE="background-color: rgb(223, 223, 223); border: none;box-shadow: inset 0 0 5px #00000048;">
        <div id="first-ing"></div>
        <button class="form-btn" type="button" id="new-ingredient">➕</button>
    </div>


    <label>Instructions:</label>
    <div>
        <input class="new-input" type="text" name="instructions" STYLE="background-color: rgb(223, 223, 223); border: none;box-shadow: inset 0 0 5px #00000048;">
        <div id="first-instruction"></div>
        <button class="form-btn" type="button" id="new-instruction">➕</button>
    </div>
    <input id="submit" type="submit" value="Add Recipe">
</form>
</body>