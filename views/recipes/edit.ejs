<%- include('../partials/header') %>

<h1>Edit Recipe</h1>

<form id="new-recipe" action="/recipes/<%= recipe._id  %>?_method=PUT" method="POST" autocomplete="off">
    <label>Title:</label>
    <input type="text" value="<%= recipe.title %>"name="title">
    <label>Difficulty:</label>
    <input type="number" min="1" max="10" value="<%= recipe.difficulty %>" name="difficulty">
    <label>Cook Time (in minutes):</label>
    <input type="number" name="cookTime" value="<%= recipe.cookTime %>"min="1">
    <label>Description:</label>
    <textarea rows="10" name="description"><%= recipe.description %></textarea>
    <label>Ingredients:</label>
    <textarea rows="20" name="ingredients"><%= recipe.ingredients %></textarea>
    <label>Instructions:</label>
    <textarea rows="20" name="instructions"><%= recipe.instructions %></textarea>
    <input id="submit" type="submit" value="Update Recipe">
</form>