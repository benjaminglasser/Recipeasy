<%- include('../partials/header') %>


<h1>Recipe Info</h1>
<section id="show-page">
    <div><strong>Title: </strong></div>
    <div><%= recipe.title %> </div>
    <div><strong>Cook Time: </strong></div>
    <div><%= recipe.cookTime %> min</div>
    <div><strong>Difficulty: </strong></div>
    <div><%= recipe.difficulty %>/10 </div>
    <div><strong>Description: </strong></div>
    <div><%= recipe.description %> </div>
    <div><strong>Ingredients: </strong></div>
    <div>
        <ul class="list">
            <% recipe.ingredients.forEach( ing => { %>
            <li><%= ing %></li>
            <% }) %>
        </ul>
    </div>

    <div><strong>Instructions: </strong></div>
    <div>
        <ol class="list">
            <% recipe.instructions.forEach( inst => { %>
            <li><%= inst %></li>
    
            <% }) %>
        </ol>
    </div>

</section>

<% if(recipe.user.includes(user._id)) { %>
<a href="/recipes/<%= recipe._id %>/edit">Edit This Recipe</a>
<div>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
        <button id="delete-btn" type="submit">Delete Recipe</button>
    </form>
</div>
<% } %>

